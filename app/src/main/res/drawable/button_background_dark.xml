<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#357ABD"
                android:endColor="#2A6099"
                android:angle="135"
                android:type="linear"/>
            <corners android:radius="14dp"/>
        </shape>
    </item>

    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#4A90D9"
                android:endColor="#357ABD"
                android:angle="135"
                android:type="linear"/>
            <corners android:radius="14dp"/>
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#4A90D9"
                android:endColor="#2E6DB4"
                android:angle="135"
                android:type="linear"/>
            <corners android:radius="14dp"/>
        </shape>
    </item>

</selector>